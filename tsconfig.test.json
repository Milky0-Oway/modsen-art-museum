{
	"extends": "./tsconfig.json",
	"include": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/__tests__/**/*"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"noEmit": true,
		"esModuleInterop": true
	},
	"baseUrl": "src",
	"paths": {
		"components/*": ["components/*"],
		"utils/*": ["utils/*"],
		"assets/*": ["assets/*"],
		"pages/*": ["pages/*"],
		"context/*": ["context/*"],
		"constants/*": ["constants/*"]
	}
}
